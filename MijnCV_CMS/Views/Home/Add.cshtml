@{
    ViewData["Title"] = "Starting Page";
}

<div>
    <form asp-action="Add" asp-controller="Home" method="post">
        <div class="row">
            <div class="form-group col-md-6">
                  <label for="Title" class="form-label">Title</label>
                  <input name="Title" type="text" class="form-control" id="Title" placeholder="Title">
            </div>
            <div class="custom-file col-md-6">
                <label for="formFile" class="form-label">Image</label>
                <input name="Image" class="form-control" type="file" id="formFile">
            </div>
        </div>
        <div class="mt-3">
            <div class="form-group">
                <label for="paragraph">paragraph</label>
                <textarea name="Paragraph" class="form-control" id="paragraph" rows="5"></textarea>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-md-6">
                <label for="position">Position on page</label>
                <input name="Position" type="number" class="form-control" id="position"/>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary mt-4 float-end">Submit</button>
            </div>
        </div>
        <input type="hidden" name="Layout" value="1"/>
        <input type="hidden" name="PageID" value="1"/>
        <input type="hidden" name="CV" value="test" />
    </form>
</div>
