@{
    ViewData["Title"] = "Add page";
}

<div>
    <form asp-action="Add" asp-controller="Home" method="post">
        <div class="row">
            <div class="form-group col-md-6">
                  <label for="Title" class="form-label">Title</label>
                  <input name="Title" type="text" class="form-control" id="Title" placeholder="Title">
            </div>
            <div class="custom-file col-md-6">
                <label for="formFile" class="form-label">Image</label>
                <input name="Image" class="form-control" type="text" id="formFile">
            </div>
        </div>
        <div class="mt-3">
            <div class="form-group">
                <label for="paragraph">paragraph</label>
                <textarea name="Paragraph" class="form-control" id="paragraph" rows="5"></textarea>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-md-6">
                <label for="layout">Layout</label>
                <select name="Layout" id="layout" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="Page">Page</label>
                <select name="PageID" id="Page" class="form-control">
                    @foreach (var Page in ViewData["Pages"] as List<Page>)
                    {
                        <option value="@Page.Id">@Page.Name</option>
                    }
                </select>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary float-end">Submit</button>
        </div>
        <input type="hidden" name="Position" value="1" />
        <input type="hidden" name="CV" value="@ViewData["CV"]" />
    </form>
</div>
