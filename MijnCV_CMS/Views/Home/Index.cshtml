@{
    ViewData["Title"] = "Starting Page";
}

<div class="mb-2 d-flex justify-content-between">
    <h1>Sections</h1>
    <a style="align-self: center; color: white;" class="btn btn-primary" asp-action="add" asp-controller="home">Add</a>
</div>
<div>
    <table class="table table-dark">
        <thead>
             <tr>
                <th>Title</th>
                <th>Page</th>
                <th style="width: 10em;">Layout</th>
                <th style="width: 12em;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Section in ViewData["Sections"] as List<Section>)
            {
                <tr>
                    <td>@Section.Title</td>
                    <td>@Section.PageID</td>
                    <td>@Section.Layout</td>
                    <td>
                        <a class="btn btn-primary" href="/Home/Edit/@Section.ID">Edit</a>
                        <form asp-action="Delete" asp-controller="home" class="d-inline">
                            <input hidden name="Id" value="@Section.ID" />
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
