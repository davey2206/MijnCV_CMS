@{
    ViewData["Title"] = "Pages page";
}

<div class="mb-2 d-flex justify-content-between">
    <h1>Pages</h1>
    <a style="align-self: center;" class="btn btn-primary" asp-action="add" asp-controller="page">Add</a>
</div>
<div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th style="width: 12em;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Page in ViewData["Pages"] as List<Page>)
            {
                <tr>
                    <td>@Page.Name</td>
                    <td>
                        <a class="btn btn-primary" href="/Page/Edit/@Page.Id">Edit</a>
                        <form asp-action="Delete" asp-controller="page" class="d-inline">
                            <input hidden name="Id" value="@Page.Id" />
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>